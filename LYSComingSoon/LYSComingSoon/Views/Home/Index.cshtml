@{
    ViewBag.Title = "LockYourStay | Coming Soon";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>LockYourStay | Coming Soon</title>
    <meta name="description" content="LockYourStay | Coming Soon">
    <meta name="author" content="LockYourStay">
    <!-- Mobile Specific Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->
    <!-- Bootstrap  -->
    <link href='@Url.Content("~/Content/css/bootstrap.min.css")' rel="stylesheet">
    <!-- icon fonts font Awesome -->
    <link href='@Url.Content("~/Content/css/font-awesome.min.css")' rel="stylesheet">
    <!-- Custom Styles -->
    <link href='@Url.Content("~/Content/css/style.css")' rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="Content/js/html5shiv.js"></script>
    <![endif]-->
</head>
<body>

    <!-- Preloader -->
    <div id="preloader">
        <div id="loader">
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="lading"></div>
        </div>
    </div><!-- /#preloader -->
    <!-- Preloader End-->
    <!-- Main Menu -->
    <div id="main-menu" class="navbar navbar-default navbar-fixed-top" role="navigation">

        <div class="navbar-header">
            <!-- responsive navigation -->
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <i class="fa fa-bars"></i>
            </button> <!-- /.navbar-toggle -->

        </div> <!-- /.navbar-header -->
        <nav class="collapse navbar-collapse">
            <!-- Main navigation -->
            <ul id="headernavigation" class="nav navbar-nav">
                <li class="active"><a href="#page-top">Home</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#subscribe">Subscribe</a></li>
                <li><a href="#contact">Contact</a></li>
				<li class="li-blog"><a href="@System.Configuration.ConfigurationManager.AppSettings.Get("Blog_URL")" target="_blank">Blog</a></li>
            </ul> <!-- /.nav .navbar-nav -->
        </nav> <!-- /.navbar-collapse  -->
    </div><!-- /#main-menu -->
    <!-- Main Menu End -->
    <!-- Page Top Section -->
    <section id="page-top" class="section-style parallax-bg" data-background-image='@Url.Content("~/images/background/page-top.jpg")'>
        <div class="pattern height-resize">
            <div class="container">
                <h1 class="site-title">
                    LockYourStay
                </h1><!-- /.site-title -->
                <h3 class="section-name">
                    <span>
                        We are currently working on something awesome.
                    </span>
                </h3><!-- /.section-name -->
                <h2 class="section-title">
                    Stay tuned!
                </h2><!-- /.Section-title  -->
                <div id="clock" class="time-count-container">
                    <div class="col-sm-3">
                        <div class="time-box">
                            <div class="time-box-inner dash days_dash animated" data-animation="rollIn" data-animation-delay="300">
                                <span class="time-number">
                                    <!--<span class="digit">0</span>-->
                                    <span class="digit days">0</span>

                                </span>
                                <span class="time-name">Days</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="time-box">
                            <div class="time-box-inner dash hours_dash animated" data-animation="rollIn" data-animation-delay="600">
                                <span class="time-number">
                                    <span class="digit hours">0</span>

                                </span>
                                <span class="time-name">Hours</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="time-box">
                            <div class="time-box-inner dash minutes_dash animated" data-animation="rollIn" data-animation-delay="900">
                                <span class="time-number">
                                    <span class="digit minutes">0</span>

                                </span>
                                <span class="time-name">Minutes</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="time-box">
                            <div class="time-box-inner dash seconds_dash animated" data-animation="rollIn" data-animation-delay="1200">
                                <span class="time-number">
                                    <span class="digit seconds">0</span>

                                </span>
                                <span class="time-name">Seconds</span>
                            </div>
                        </div>
                    </div>

                </div><!-- /.time-count-container -->
                <p class="time-until">
                    <span>Time To Launch</span>
                </p><!-- /.time-until -->

                <div class="next-section">
                    <a class="go-to-about"><span></span></a>
                </div><!-- /.next-section -->

            </div><!-- /.container -->
        </div><!-- /.pattern -->
    </section><!-- /#page-top -->
    <!-- Page Top Section  End -->
    <!-- About Us Section -->
    <section id="about" class="section-style no-parallax-bg" data-background-image='@Url.Content("~/images/background/about-us.jpg")'>
        <div class="pattern height-resize">
            <div class="container">
                <h3 class="section-name">
                    <span>
                        About Us
                    </span>
                </h3><!-- /.section-name -->
                <h2 class="section-title">
                    We Are dedicated
                </h2><!-- /.Section-title  -->
                <p class="section-description">
                    Few years back our parents packed bags for us and we set-off for a new Unknown Land. We explored, drained thousand of bucks on brokers and finally settled with a stay that we Love.

                    But did we really need this if we could get our Dream Stay by searching, selecting and booking with cent assurance?

                    Fear not, now shed off this worry, as we are producing a One Window Service where you can Search -> Select -> and LOCK your dream STAY
                    <br />
                </p>
                <p class="section-description-hightlighted" style="text-align:center">We pledge to bring SMILES and add one more "SATISFIED CUSTOMER" feather on our hat of SERVICE</p>
                <!-- /.section-description -->
                <div class="next-section">
                    <a class="go-to-subscribe"><span></span></a>
                </div><!-- /.next-section -->
            </div><!-- /.container -->
        </div><!-- /.pattern -->


    </section><!-- /#about -->
    <!-- About Us Section End -->
    <!-- Subscribe Section -->
    <section id="subscribe" class="section-style parallax-bg" data-background-image='@Url.Content("~/images/background/newsletter.jpg")'>
        <div class="pattern height-resize">
            <div class="container">
                <h3 class="section-name">
                    <span>
                        Subscribe
                    </span>
                </h3><!-- /.section-name -->
                <h2 class="section-title">
                    Our Newsletter
                </h2><!-- /.Section-title  -->
                <p class="section-description">
                    Enter your email address to receive all news from our awesome website
                </p><!-- /.section-description -->
            @using (Html.BeginForm("SendSubscriptionMail", "Home", FormMethod.Post, new { @class = "news-letter" }))
            { 
                    <div class="subscribe-hide">
                        <input class="form-control" type="email" id="subscribe_email" name="subscribe_email" placeholder="Email Address" required>
                        <span class="subscribe-email-error"></span>
                        <button type="button" id="subscribe-submit" class="btn"><i class="fa fa-envelope"></i></button>
                        <span id="subscribe-loading" class="btn"> <i class="fa fa-refresh fa-spin"></i> </span>
                        <div class="subscribe-error"></div>
                    </div><!-- /.subscribe-hide -->
                    <div class="subscribe-message"></div>
               }<!-- /.news-letter -->
                <div class="social-btn-container">
                    <span class="social-btn-box">
                        <a href="https://www.facebook.com/lockyourstay" class="facebook-btn" target="_blank">
                            <i class="fa fa-facebook"></i>
                        </a>
                    </span><!-- /.social-btn-box -->
                    <span class="social-btn-box">
                        <a href="https://twitter.com/lockyourstay" class="twitter-btn" target="_blank"><i class="fa fa-twitter"></i></a>
                    </span><!-- /.social-btn-box -->
                    <span class="social-btn-box">
                        <a href="http://in.linkedin.com/in/lockyourstay" class="linkedin-btn" target="_blank"><i class="fa fa-linkedin"></i></a>
                    </span><!-- /.social-btn-box -->
                    <!--<span class="social-btn-box">
                        <a href="https://plus.google.com/u/0/109754528086706038679" class="google-plus-btn" target="_blank"><i class="fa fa-google-plus"></i></a>
                    </span>-->
                    <!-- /.social-btn-box -->
                    <!--<span class="social-btn-box">
                        <a href="#" class="youtube-btn"><i class="fa fa-youtube"></i></a>
                    </span>-->
                    <!-- /.social-btn-box -->


                </div><!-- /.social-btn-container -->
                <div class="next-section">
                    <a class="go-to-contact"><span></span></a>
                </div><!-- /.next-section -->
            </div><!-- /.container -->
        </div><!-- /.pattern -->
    </section><!-- /#subscribe -->
    <!-- Subscribe Section End -->
    <!-- Contact Section -->

    <section id="contact" class="section-style no-parallax-bg" data-background-image='@Url.Content("~/images/background/contact.jpg")'>
        <div class="pattern height-resize">
            <div class="container">
                <h3 class="section-name">
                    <span>
                        Contact
                    </span>
                </h3><!-- /.section-name -->
                <h2 class="section-title">
                    Get in Touch
                </h2><!-- /.Section-title  -->
                <p class="section-description">
                    We're here to help in any way we can. Please submit your request below and we'll get back to you shortly.
                </p><!-- /.section-description -->
            @using (Html.BeginForm("SendContactUsMail", "Home",FormMethod.Post, new {id="contactform", role="form",  @class="clearfix" }))
            { 
                @*<form id="contactform" role="form" method="post" class="clearfix">*@
                    <div class="contact-box-hide">
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="first_name" name="first_name" required placeholder="First Name">
                            <span class="first-name-error"></span>
                        </div>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="last_name" name="last_name" required placeholder="Last Name">
                            <span class="last-name-error"></span>
                        </div>
                        <div class="col-sm-6">
                            <input type="email" class="form-control" id="contact_email" name="contact_email" required placeholder="Email Address">
                            <span class="contact-email-error"></span>
                        </div>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="contact_subject" name="contact_subject" required placeholder="Subject">
                            <span class="contact-subject-error"></span>
                        </div>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="5" id="message" name="message" required placeholder="Message"></textarea>
                            <span class="contact-message-error"></span>
                        </div>
                        <div class="col-sm-2">
                            @*<asp:LinkButton ID="btnSubmit" runat="server" OnClick="btnSubmit_Click" CssClass="btn custom-btn col-xs-12"><i class="fa fa-rocket"></i></asp:LinkButton>*@
                            <button id="contact-submit" class="btn custom-btn col-xs-12" type="button" name="submit"><i class="fa fa-rocket"></i></button>
                            <span id="contact-loading" class="btn custom-btn col-xs-12"> <i class="fa fa-refresh fa-spin"></i> </span>
                        </div>
                    </div><!-- /.contact-box-hide -->
                    <div class="contact-message"></div>
                @*</form>*@<!-- /#contactform -->
            }
                <div class="next-section">
                    <a class="go-to-page-top"><span></span></a>
                </div><!-- /.next-section -->
            </div><!-- /.container -->
        </div><!-- /.pattern -->
    </section>
    <!-- /#contact -->
    <!-- Contact Section End -->
    <!-- Footer Section -->
    <footer id="footer-section">
        <p class="copyright">
            &copy; <a href="http://lockyourstay.com">LockYourStay</a> 2015-2016, All Rights Reserved. Designed by & Developed by LockYourStay.
    </footer>
    <!-- Footer Section End -->
    <!-- jQuery Library -->
    <script type="text/javascript" src='@Url.Content("~/Content/js/jquery-2.1.0.min.js")'></script>

    <script type="text/javascript" src='@Url.Content("~/Content/js/jquery.countdown.min.js")'></script>
    <!-- Modernizr js -->
    <script type="text/javascript" src='@Url.Content("~/Content/js/modernizr-2.8.0.min.js")'></script>
    <!-- Plugins -->
    <script type="text/javascript" src='@Url.Content("~/Content/js/plugins.js")'></script>
    <!-- Custom JavaScript Functions -->
    <script type="text/javascript" src='@Url.Content("~/Content/js/functions.js")'></script> 
    

    <script type="text/javascript">
        var SendContactUsMailUrl = '@Url.Action("SendContactUsMail","Home")';
        var SendSubscriptionMailUrl = '@Url.Action("SendSubscriptionMail", "Home")';
        
        $(document).ready(function () {
            $('#clock').countdown('2015/6/28 12:00:00', function (event) {
                $('span.days').html(event.strftime('%D'));
                $('span.hours').html(event.strftime('%H'));
                $('span.minutes').html(event.strftime('%M'));
                $('span.seconds').html(event.strftime('%S'));
            });
            $('.li-blog').click(function () {
                //this will redirect us in new tab
                window.open("http://lockyourstay.com/blog", '_blank');
            });
           
        });
    </script>

</body>
</html>
